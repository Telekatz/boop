	0x48B7, // Prog-	->	Prog-	0x0101, // 1		->	1	0x0102, // 2		->	2	0x609F, // 3		->	3	0x10EF, // 4		->	4	0x906F, // 5		->	5	0x50AF, // 6		->	6	0x30CF, // 7		->	7	0xB04F, // 8		->	8	0x708F, // 9		->	9	0x8877, // 0		->	0	0xF20D, // -/--		->	Guide	0x0181, // AV		->	Source	0x0f0c, // Menu		->	Menue	0xD22D, // PiP		->	Tools	0x1AE5, // A/B		->	Return	0x7C83, // 16:9		->	P.Size	0xF807, // Info		->	Info	0xD629, // VTX1		->	Ch.List	0x0000, // VTX2		->		0xC837, // VTX3		->	Pre-CH	0x6897, // Blue		->	Blue	0xA857, // Yello	->	Yellow	0x28D7, // Green	->	Green	0x36C9, // Red		->	Red	0xC23D, // TV		->	TV/DTV	0x0f0C  // Power	->	Standby},